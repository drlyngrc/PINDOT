<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:toDegrees="90">
    <shape
        android:shape="ring"
        android:useLevel="true"
        android:thicknessRatio="180">
        <solid android:color="@color/white" />
        <size
            android:width="300dp"
            android:height="300dp" />
    </shape>
</rotate>
